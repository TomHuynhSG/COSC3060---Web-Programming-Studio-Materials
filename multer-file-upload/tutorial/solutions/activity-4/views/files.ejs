<!-- views/files.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Uploaded Files</title>
</head>
<body>
  <h1>Uploaded Files</h1>
  <ul>
    <% files.forEach(file => { %>
      <li>
        <%= file.filename %> - <a href="/download/<%= file.filename %>">Download</a>
      </li>
    <% }) %>
  </ul>
  <div>
    <% for(let i = 1; i <= pages; i++) { %>
      <a href="/files?page=<%= i %>"><%= i %></a>
    <% } %>
  </div>
</body>
</html>
